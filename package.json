{
  "name": "SafeSurfer-Desktop",
  "version": "1.0.0",
  "APPBUILD": "10",
  "description": "The SafeSurfer desktop app",
  "main": "./assets/scripts/main.js",
  "license": "GPL-3.0",
  "scripts": {
    "test": "mocha",
    "start": "node support/start.js",
    "sscli": "bash ./support/linux/shared-resources/sscli",
    "electron-builder": "node_modules/.bin/electron-builder",
    "electron-icon-maker": "node_modules/.bin/electron-icon-maker",
    "build": "node_modules/.bin/electron-builder --platform all",
    "build:win": "node_modules/.bin/electron-builder --win --ia32 --x64",
    "build:linux": "node_modules/.bin/electron-builder --linux --x64",
    "build:macos": "node_modules/.bin/electron-builder --mac",
    "build:mas": "make BUILDMODE=RELEASE UPDATES=false MACOSDEVID=$__MACDEVTEAMID configure && if [ ! -f embedded.provisionprofile ]; then echo '!Cannot find file: embedded.provisionprofile'; exit 1; fi && node_modules/.bin/electron-builder --mac mas",
    "package-macos": "node_modules/.bin/electron-packager . --overwrite --platform=darwin --arch=x64 --icon=assets/media/icons/mac/icon.icns --prune --out=release-builds --darwinDarkModeSupport=true --ignore=tools --ignore=docs --ignore=screenshots --ignore=support --ignore=builtBinaries",
    "package-macos-mas": "node_modules/.bin/electron-packager . --overwrite --platform=mas --arch=x64 --icon=assets/media/icons/mac/icon.icns --prune --out=release-builds --darwinDarkModeSupport=true --ignore=tools --ignore=docs --ignore=screenshots --ignore=support --ignore=builtBinaries --app-bundle-id=nz.co.safesurfer.safesurfer-desktop",
    "package-win": "node_modules/.bin/electron-packager . SafeSurfer-Desktop --overwrite --asar --platform=win32 --arch=x64 --icon=assets/media/icons/win/icon.ico --prune=true --out=release-builds --version-string.CompanyName=CE --version-string.FileDescription=CE --version-string.ProductName=\"SafeSurfer-Desktop\" --ignore=tools --ignore=docs --ignore=screenshots --ignore=support --ignore=builtBinaries",
    "package-win32": "node_modules/.bin/electron-packager . SafeSurfer-Desktop --overwrite --asar --platform=win32 --arch=ia32 --icon=assets/media/icons/win/icon.ico --prune=true --out=release-builds --version-string.CompanyName=CE --version-string.FileDescription=CE --version-string.ProductName=\"SafeSurfer-Desktop\" --ignore=tools --ignore=docs --ignore=screenshots --ignore=support --ignore=builtBinaries",
    "compile-win-setup": "node ./support/windows/compile.js ./support/windows/inno-script/build-windows-installer.iss",
    "compile-win-setup32": "node ./support/windows/compile.js ./support/windows/inno-script/build-windows-installer32.iss",
    "build-macos-dmg": "node_modules/.bin/electron-installer-dmg --icon=./assets/media/icons/mac/icon.icns --background=./support/macOS/dmg-background.png --out=./release-builds ./release-builds/SafeSurfer-Desktop-darwin-x64/SafeSurfer-Desktop.app SafeSurfer-Desktop",
    "sign-macos-app": "node_modules/.bin/electron-osx-sign \"./release-builds/SafeSurfer-Desktop-darwin-x64/SafeSurfer-Desktop.app\" --verbose",
    "sign-macos-app-mas": "node_modules/.bin/electron-osx-sign ./release-builds/SafeSurfer-Desktop-mas-x64/SafeSurfer-Desktop.app --verbose",
    "pack-macos-mas": "node_modules/.bin/electron-osx-flat ./release-builds/SafeSurfer-Desktop-mas-x64/SafeSurfer-Desktop.app --verbose",
    "package-win-appx": "node_modules/.bin/electron-packager . safesurferdesktop --overwrite --asar --platform=win32 --arch=x64 --icon=assets/media/icons/win/icon.ico --prune=true --out=release-builds --version-string.CompanyName=CE --version-string.FileDescription=CE --version-string.ProductName=\"safesurferdesktop\"",
    "build-win-appx": "node_modules/.bin/electron-windows-store --input-directory=release-builds/safesurferdesktop-win32-x64 --output-directory=release-builds/safesurferdesktop-win32-x64.appx --package-version 1.0.0.0 --package-background-color #00a7d6 --identity-name safesurferdesktop --package-description \"Keep safe in the digitial surf with Safe Surfer\" --package-name safesurferdesktop -m support/windows/appx/AppXManifest.xml --assets support/windows/appx/media",
    "package-win-appx32": "node_modules/.bin/electron-packager . safesurferdesktop --overwrite --asar --platform=win32 --arch=ia32 --icon=assets/media/icons/win/icon.ico --prune=true --out=release-builds --version-string.CompanyName=CE --version-string.FileDescription=CE --version-string.ProductName=\"safesurferdesktop\"",
    "build-win-appx32": "node_modules/.bin/electron-windows-store --input-directory=release-builds/safesurferdesktop-win32-ia32 --output-directory=release-builds/safesurferdesktop-win32-ia32.appx --package-version 1.0.0.0 --package-background-color #00a7d6 --identity-name safesurferdesktop --package-description \"Keep safe in the digitial surf with Safe Surfer\" --package-name safesurferdesktop -m support/windows/appx/AppXManifest.xml --assets support/windows/appx/media",
    "sign-win-exe": "node ./support/windows/sign.js",
    "lintTranslations": "node ./support/lintTranslations.js",
    "genTranslations": "node ./support/genTranslations.js",
    "genwinpath": "node ./support/windows/genwinpath.js"
  },
  "creators": [
    {
      "name": "Caleb Woodbine",
      "reference": "https://gitlab.com/BobyMCbobs"
    }
  ],
  "repository": "https://gitlab.com/safesurfer/SafeSurfer-Desktop",
  "keywords": [
    "SafeSurfer",
    "safe surfer",
    "safe",
    "surfer"
  ],
  "appOptions": {
    "BUILDMODE": "dev",
    "isBeta": false,
    "enableUpdates": true,
    "enableNotifications": true,
    "enableLogging": false,
    "disableNodeIntegration": true,
    "testLanguage": null
  },
  "author": "Safe Surfer",
  "build": {
    "appId": "nz.co.safesurfer.safesurfer-desktop",
    "mac": {
      "category": "public.app-category.utilities",
      "target": [
        "zip",
        "dmg",
        "mas"
      ],
      "icon": "assets/media/icons/mac/icon.icns",
      "entitlements": "support/macOS/entitlements.mac.plist",
      "type": "distribution",
      "electronLanguages": [
        "en",
        "de",
        "hu",
        "it",
        "nb_NO",
        "pt",
        "pt_BR",
        "pt_PT"
      ]
    },
    "mas": {
      "entitlements": "support/macOS/entitlements.mas.plist",
      "type": "distribution",
      "category": "public.app-category.utilities",
      "provisioningProfile": "embedded.provisionprofile"
    },
    "dmg": {
      "contents": [
        {
          "x": 110,
          "y": 150
        },
        {
          "x": 240,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "build/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "build/icon.ico"
    },
    "linux": {
      "target": "dir"
    },
    "files": [
      "!tools/**",
      "!docs/**",
      "!screenshots/**",
      "!support/**",
      "!builtBinaries/**"
    ]
  },
  "devDependencies": {
    "electron": "^2.0.10",
    "electron-builder": "^20.28.2",
    "electron-icon-maker": "0.0.4",
    "electron-installer-dmg": "^2.0.0",
    "electron-osx-sign": "^0.4.11",
    "electron-packager": "^12.1.1",
    "electron-windows-store": "^2.1.0",
    "innosetup-compiler": "^5.5.9",
    "mocha": "^5.2.0",
    "os-locale": "^3.0.1",
    "spectron": "^5.0.0"
  },
  "dependencies": {
    "bonjour": "^3.5.0",
    "connectivity": "^1.0.1",
    "electron-store": "^2.0.0",
    "electron-window-state": "^5.0.1",
    "is-admin": "^2.1.1",
    "jquery": "^3.3.1",
    "lets-get-meta": "^2.1.1",
    "moment": "^2.22.2",
    "node-dns-sd": "^0.2.0",
    "node_dns_changer": "^1.1.7",
    "nodejs-base64-encode": "0.0.2",
    "request": "^2.88.0",
    "shelljs": "^0.8.2"
  }
}
