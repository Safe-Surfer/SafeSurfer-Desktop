{
  "name": "SafeSurfer-Desktop",
  "version": "1.0.0rc4",
  "APPBUILD": "9",
  "description": "The SafeSurfer desktop app",
  "main": "./assets/scripts/main.js",
  "license": "GPL-3.0",
  "scripts": {
    "start": "node support/start.js",
    "sscli": "bash ./support/linux/shared-resources/sscli",
    "electron-builder": "node_modules/.bin/electron-builder",
    "electron-icon-maker": "node_modules/.bin/electron-icon-maker",
    "package-linux": "node_modules/.bin/electron-packager . SafeSurfer-Desktop --overwrite --asar --platform=linux --arch=x64 --icon=assets/media/icons/png/2000x2000.png --prun=true --out=release-builds",
    "package-linux32": "node_modules/.bin/electron-packager . SafeSurfer-Desktop --overwrite --asar --platform=linux --arch=ia32 --icon=assets/media/icons/png/2000x2000.png --prun=true --out=release-builds",
    "package-macos": "node_modules/.bin/electron-packager . --overwrite --platform=darwin --arch=x64 --prune --out=release-builds --darwinDarkModeSupport=true",
    "package-win": "node_modules/.bin/electron-packager . SafeSurfer-Desktop --overwrite --asar --platform=win32 --arch=x64 --icon=assets/media/icons/win/icon.ico --prune=true --out=release-builds --version-string.CompanyName=CE --version-string.FileDescription=CE --version-string.ProductName=\"SafeSurfer-Desktop\"",
    "package-win32": "node_modules/.bin/electron-packager . SafeSurfer-Desktop --overwrite --asar --platform=win32 --arch=ia32 --icon=assets/media/icons/win/icon.ico --prune=true --out=release-builds --version-string.CompanyName=CE --version-string.FileDescription=CE --version-string.ProductName=\"SafeSurfer-Desktop\"",
    "compile-win-setup": "node ./support/windows/compile.js ./support/windows/inno-script/build-windows-installer.iss",
    "compile-win-setup32": "node ./support/windows/compile.js ./support/windows/inno-script/build-windows-installer32.iss",
    "build-macos-dmg": "node_modules/.bin/electron-installer-dmg --icon=./assets/media/icons/mac/icon.icns --background=./support/macOS/dmg-background.png --out=./release-builds ./release-builds/SafeSurfer-Desktop-darwin-x64/SafeSurfer-Desktop.app SafeSurfer-Desktop",
    "sign-macos-app": "node_modules/.bin/electron-osx-sign \"./release-builds/SafeSurfer-Desktop-darwin-x64/SafeSurfer-Desktop.app\" --verbose",
    "build-win-appx": "node_modules/.bin/electron-windows-store --input-directory=release-builds/safesurferdesktop-win32-x64 --output-directory=release-builds/safesurferdesktop-win32-x64.appx --package-version 1.0.0.0 --package-name safesurferdesktop",
    "lintTranslations": "node ./support/lintTranslations.js",
    "genTranslations": "node ./support/genTranslations.js"
  },
  "repository": "https://gitlab.com/safesurfer/SafeSurfer-Desktop",
  "keywords": [
    "SafeSurfer",
    "safe surfer",
    "safe",
    "surfer"
  ],
  "appOptions": {
    "BUILDMODE": "dev",
    "isBeta": false,
    "enableUpdates": true,
    "enableNotifications": true,
    "enableLogging": false,
    "disableNodeIntegration": true,
    "testLanguage": null
  },
  "author": "Safe Surfer",
  "build": {
    "appId": "nz.co.SafeSurfer.SafeSurfer-Desktop",
    "mac": {
      "category": "public.app-category.utilities",
      "target": [
        "pkg",
        "dmg",
        "zip",
        "mas"
      ],
      "icon": "assets/media/icons/mac/icon.icns",
      "entitlements": "build/entitlements.mac.plist",
      "type": "distribution"
    },
    "mas": {
      "entitlements": "support/macOS/entitlements.mas.plist",
      "type": "distribution",
      "category": "public.app-category.utilities"
    },
    "dmg": {
      "contents": [
        {
          "x": 110,
          "y": 150
        },
        {
          "x": 240,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        }
      ]
    }
  },
  "devDependencies": {
    "electron": "^2.0.10",
    "electron-builder": "^20.28.2",
    "electron-icon-maker": "0.0.4",
    "electron-installer-dmg": "^2.0.0",
    "electron-osx-sign": "^0.4.11",
    "electron-packager": "^12.1.1",
    "electron-windows-store": "^2.1.0",
    "innosetup-compiler": "^5.5.9",
    "os-locale": "^3.0.1"
  },
  "dependencies": {
    "bonjour": "^3.5.0",
    "connectivity": "^1.0.1",
    "electron-store": "^2.0.0",
    "electron-window-state": "^5.0.1",
    "is-admin": "^2.1.1",
    "jquery": "^3.3.1",
    "lets-get-meta": "^2.1.1",
    "moment": "^2.22.2",
    "node-dns-sd": "^0.2.0",
    "node_dns_changer": "^1.1.5",
    "nodejs-base64-encode": "0.0.2",
    "request": "^2.88.0",
    "shelljs": "^0.8.2"
  }
}
