{
  "name": "SafeSurfer-Desktop",
  "version": "1.0.0",
  "APPBUILD": "10",
  "description": "Keeping you safe in the digitial surf with Safe Surfer",
  "main": "./assets/scripts/main.js",
  "license": "GPL-3.0",
  "scripts": {
    "test": "mocha",
    "start": "node support/start.js",
    "build": "node_modules/.bin/electron-builder --platform all",
    "build:win": "node_modules/.bin/electron-builder --win --ia32 --x64",
    "build:linux": "node_modules/.bin/electron-builder --linux --x64",
    "build:macos": "node_modules/.bin/electron-builder --mac",
    "build:mas": "if [ ! -f embedded.provisionprofile ]; then echo '[!] Cannot find file: embedded.provisionprofile'; exit 1; fi && make BUILDMODE=RELEASE UPDATES=false MACOSDEVID=$__MACDEVTEAMID configure && node_modules/.bin/electron-builder --mac mas",
    "build:appx": "node_modules/.bin/electron-builder --win appx --ia32 --x64",
    "sign-win-exe": "node ./support/windows/sign.js",
    "lintTranslations": "node ./support/lintTranslations.js",
    "genTranslations": "node ./support/genTranslations.js"
  },
  "creators": [
    {
      "name": "Caleb Woodbine",
      "reference": "https://gitlab.com/BobyMCbobs"
    }
  ],
  "repository": "https://gitlab.com/safesurfer/SafeSurfer-Desktop",
  "keywords": [
    "SafeSurfer",
    "safe surfer",
    "safe",
    "surfer"
  ],
  "appOptions": {
    "BUILDMODE": "dev",
    "isBeta": false,
    "enableUpdates": true,
    "enableNotifications": true,
    "enableLogging": false,
    "disableNodeIntegration": true,
    "testLanguage": null
  },
  "author": "Safe Surfer",
  "build": {
    "appId": "nz.co.safesurfer.safesurfer-desktop",
    "buildVersion": "10",
    "mac": {
      "category": "public.app-category.utilities",
      "target": [
        "zip",
        "dmg",
        "mas"
      ],
      "icon": "assets/media/icons/mac/icon.icns",
      "entitlements": "support/macOS/entitlements.mac.plist",
      "type": "distribution",
      "electronLanguages": [
        "en",
        "de",
        "hu",
        "it",
        "nb_NO",
        "pt",
        "pt_BR",
        "pt_PT"
      ]
    },
    "mas": {
      "entitlements": "support/macOS/entitlements.mas.plist",
      "type": "distribution",
      "category": "public.app-category.utilities",
      "provisioningProfile": "embedded.provisionprofile"
    },
    "dmg": {
      "contents": [
        {
          "x": 110,
          "y": 150
        },
        {
          "x": 240,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "build/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "build/icon.ico"
    },
    "appx": {
      "applicationId": "safesurferdesktop",
      "backgroundColor": "#00a7d6",
      "displayName": "safesurferdesktop",
      "identityName": "safesurferdesktop",
      "publisher": "CN=safesurfer",
      "publisherDisplayName": "Safe Surfer",
      "languages": [
        "en",
        "de",
        "hu",
        "it",
        "nb_NO",
        "pt",
        "pt_BR",
        "pt_PT"
      ]
    },
    "linux": {
      "target": "dir"
    },
    "files": [
      "!tools/**",
      "!docs/**",
      "!screenshots/**",
      "!support/**",
      "!builtBinaries/**"
    ]
  },
  "devDependencies": {
    "electron": "^2.0.10",
    "electron-builder": "^20.28.2",
    "electron-installer-dmg": "^2.0.0",
    "electron-osx-sign": "^0.4.11",
    "electron-packager": "^12.1.1",
    "electron-windows-store": "^2.1.0",
    "mocha": "^5.2.0",
    "os-locale": "^3.0.1",
    "spectron": "^5.0.0"
  },
  "dependencies": {
    "bonjour": "^3.5.0",
    "connectivity": "^1.0.1",
    "electron-store": "^2.0.0",
    "electron-window-state": "^5.0.1",
    "is-admin": "^2.1.1",
    "jquery": "^3.3.1",
    "lets-get-meta": "^2.1.1",
    "moment": "^2.22.2",
    "node-dns-sd": "^0.2.0",
    "node_dns_changer": "^1.1.7",
    "nodejs-base64-encode": "0.0.2",
    "request": "^2.88.0",
    "shelljs": "^0.8.2"
  }
}
