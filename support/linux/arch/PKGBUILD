# Maintainer: Caleb Woodbine <calebwoodbine.public@gmail.com>
pkgname=SafeSurfer-Desktop
pkgver=1.0
pkgrel=1
pkgdesc="Keep safe in the digitial surf with Safe Surfer."
arch=('x86_64')
url="https://gitlab.com/safesurfer/${pkgname}"
license=('GPL')
makedepends=(npm nodejs)
depends=(polkit curl)
source=("https://gitlab.com/safesurfer/${pkgname}/-/archive/${pkgver}/${pkgname}-${pkgver}.zip")
md5sums=('SKIP')

prepare() {
	cd "$pkgname-$pkgver"
	npm install
}

build() {
	cd "$pkgname-$pkgver"
	make PACKAGEFORMAT=arch build-linux
}

package() {
	cd "$pkgname-$pkgver"
	make DESTDIR="$pkgdir/" install
}

post_remove() {
	rm -rf /opt/SafeSurfer-Desktop
}
