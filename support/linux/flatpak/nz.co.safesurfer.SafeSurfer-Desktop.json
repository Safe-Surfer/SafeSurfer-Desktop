{
    "app-id": "nz.co.safesurfer.SafeSurfer-Desktop",
    "runtime": "org.freedesktop.Platform",
    "runtime-version": "1.6",
    "branch": "stable",
    "sdk": "org.freedesktop.Sdk",
    "base": "io.atom.electron.BaseApp",
    "base-version": "stable",
    "command": "/app/usr/lib64/SafeSurfer-Desktop/SafeSurfer-Desktop",
    "separate-locales": false,
    "finish-args": [
        "--share=ipc",
        "--socket=x11",
        "--socket=pulseaudio",
        "--share=network",
        "--share=ipc",
        "--socket=x11",
        "--device=all",
        "--allow=devel",
        "--talk-name=org.freedesktop.Notifications",
        "--env=PATH=/app/bin:/usr/bin:/run/host/usr/bin/",
        "--env=LD_LIBRARY_PATH=/app/lib:/usr/lib/ffmpeg/lib:/run/host/lib",
        "--talk-name=ca.desrt.dconf",
        "--env=DCONF_USER_CONFIG_DIR=.config/dconf"
    ],
    "modules": [
        {
            "name": "SafeSurfer-Desktop",
            "buildsystem": "simple",
            "sources": [
                {
                    "type": "archive",
                    "url": "http://142.93.48.189/files/desktop/10-1.0.0/SafeSurfer-Desktop-1.0.0-10-linux.zip",
                    "sha256": "2f9a217d7dfa74a99255a1feacccb3a7930a43feb6733bab838a2bb2c7952dcb",
                    "dest": "main"
                }
            ],
            "build-commands": [
            	"mkdir -p /app/usr",
                "cp -ra main/* /app/usr/."
            ]
        }
    ]
}