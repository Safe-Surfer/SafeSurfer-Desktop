{
    "app-id": "nz.co.safesurfer.SafeSurfer-Desktop",
    "runtime": "org.freedesktop.Platform",
    "runtime-version": "1.6",
    "branch": "stable",
    "sdk": "org.freedesktop.Sdk",
    "base": "io.atom.electron.BaseApp",
    "base-version": "stable",
    "command": "/app/usr/lib64/SafeSurfer-Desktop/SafeSurfer-Desktop",
    "separate-locales": false,
    "finish-args": [
        "--share=ipc",
        "--socket=x11",
        "--socket=pulseaudio",
        "--share=network",
        "--share=ipc",
        "--socket=x11",
        "--socket=wayland",
        "--allow=devel",
        "--talk-name=org.freedesktop.Notifications",
        "--filesystem=host",
        "--env=PATH=/app/bin:/usr/bin:/run/host/usr/bin/",
        "--env=LD_LIBRARY_PATH=/app/lib:/usr/lib/ffmpeg/lib:/run/host/usr/lib64:/run/host/lib64",
        "--filesystem=/usr/bin",
        "--filesystem=/usr/lib64",
        "--filesystem=/lib64",
        "--filesystem=xdg-run/dconf",
        "--filesystem=~/.config/dconf:ro",
        "--talk-name=ca.desrt.dconf",
        "--env=DCONF_USER_CONFIG_DIR=.config/dconf"
    ],
    "modules": [
        {
            "name": "SafeSurfer-Desktop",
            "buildsystem": "simple",
            "sources": [
                {
                    "type": "archive",
                    "url": "http://142.93.48.189/files/desktop/9-1.0.0rc4/linux-precompiled/SafeSurfer-Desktop-1.0.0rc4-9-linux.zip",
                    "sha256": "80b2024c8ee10715992436157ec83834a76ad559c47ef81c5b57010cfed2cdfc",
                    "dest": "main"
                }
            ],
            "build-commands": [
            	"mkdir -p /app/usr",
                "cp -ra main/* /app/usr/.",
                "echo $LD_LIBRARY_PATH"
            ]
        }
    ]
}