{
    "app-id": "nz.co.safesurfer.SafeSurfer-Desktop",
    "runtime": "org.freedesktop.Platform",
    "runtime-version": "1.6",
    "branch": "stable",
    "sdk": "org.freedesktop.Sdk",
    "base": "io.atom.electron.BaseApp",
    "base-version": "stable",
    "command": "/app/usr/lib64/SafeSurfer-Desktop/SafeSurfer-Desktop",
    "separate-locales": false,
    "finish-args": [
        "--share=ipc",
        "--socket=x11",
        "--socket=pulseaudio",
        "--share=network",
        "--talk-name=org.freedesktop.Notifications",
        "--filesystem=host"
    ],
    "modules": [
        {
            "name": "SafeSurfer-Desktop",
            "buildsystem": "simple",
            "sources": [
                {
                    "type": "archive",
                    "url": "http://142.93.48.189/files/desktop/8-1.0.0rc3/linux-precompiled/SafeSurfer-Desktop-1.0.0rc3-8-linux.zip",
                    "sha256": "80b2024c8ee10715992436157ec83834a76ad559c47ef81c5b57010cfed2cdfc",
                    "dest": "main"
                }
            ],
            "build-commands": [
            	"mkdir -p /app/usr",
                "cp -ra main/* /app/usr/."
            ]
        }
    ]
}